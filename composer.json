{
    "name": "lara-zeus/rain",
    "description": "Zeus Rain simple way to manage widgets for your website landing page",
    "keywords": [
        "laravel",
        "lara-zeus",
        "widgets",
        "frontpage",
        "landing page",
        "filamentphp"
    ],
    "homepage": "https://larazeus.com/rain",
    "support": {
        "issues": "https://github.com/lara-zeus/rain/issues",
        "source": "https://github.com/lara-zeus/rain"
    },
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "php coder",
            "email": "info@larazeus.com",
            "role": "Owner"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "lara-zeus/core": "3.x-dev"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "phpunit/phpunit": "^10.2",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0 || ^8.0",
        "pestphp/pest-plugin-laravel": "2.x-dev",
        "pestphp/pest-plugin-livewire": "2.x-dev",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "LaraZeus\\Rain\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaraZeus\\Rain\\Tests\\": "tests"
        }
    },
    "scripts": {
        "pint": "vendor/bin/pint",
        "test:pest": "vendor/bin/pest --parallel",
        "test:phpstan": "vendor/bin/phpstan analyse",
        "test": [
            "@test:pest",
            "@test:phpstan"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaraZeus\\Rain\\RainServiceProvider"
            ],
            "aliases": {
                "Rain": "LaraZeus\\Rain\\Facades\\Rain"
            }
        }
    },
    "minimum-stability": "dev"
}
